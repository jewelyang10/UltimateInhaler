<RelativeLayout
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_height="match_parent"
    android:background="@drawable/vignette">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/history_title"
        android:layout_marginTop="60dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TRACKING OVERVIEW"
            android:gravity="center"
            android:textSize="30dp"
            android:textColor="#fff"
            android:textStyle="bold"
            android:id="@+id/Monthly_textView" />
    </LinearLayout>
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/history_title"
        android:layout_marginRight="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="8dp"
        android:id="@+id/header"
        android:background="#80ffffff">

        <TableRow
            android:padding="8dp">
            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="Date"
                android:layout_column="0"
                android:textColor="#000"
                android:textSize="20dp"
                android:gravity="center"
                />

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Health Pressure"
                android:textColor="#000"
                android:layout_column="1"
                android:textSize="20dp"
                android:gravity="center"
                />

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="T\u00B0C"
                android:textColor="#000"

                android:layout_column="2"
                android:textSize="20dp"
                android:gravity="center"
                />

            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="Pollen"
                android:textColor="#000"

                android:layout_column="3"
                android:textSize="20dp"
                android:gravity="center"
                />

        </TableRow>

    </TableLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_below="@+id/header">
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="2dp"
            android:layout_marginLeft="2dp"
            android:id="@+id/history_table"
            >

        </TableLayout>
    </ScrollView>


    </RelativeLayout>