<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sky"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:id="@+id/swipe">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <android.support.v7.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            card_view:cardCornerRadius="5dp"
            card_view:contentPadding="2dp"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="13dp"
            card_view:cardBackgroundColor="#D3F3FA">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/weatherinform"
                    android:scaleType="fitXY"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/weatherIconImageView"
                    android:src="@drawable/na"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Temperature"
                    android:textColor="#000"
                    android:id="@+id/temperatureTextView"
                    android:textStyle="bold"
                    android:typeface="serif"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Condition"
                    android:textColor="#000"

                    android:id="@+id/conditionTextView"
                    android:layout_below="@+id/textView_today"
                    android:layout_alignParentStart="true" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Location"
                    android:textColor="#000"

                    android:id="@+id/locationTextView"
                    android:textStyle="bold"
                    android:layout_below="@+id/conditionTextView"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Now"
                    android:textColor="#000"

                    android:id="@+id/textView_today"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    android:typeface="serif" />

            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view_next"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            card_view:cardCornerRadius="5dp"
            card_view:contentPadding="2dp"
            android:layout_below="@+id/card_view"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="13dp"
            card_view:cardBackgroundColor="#D3F3FA">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/weatherinform2"
                    android:scaleType="fitXY"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/weatherIconImageView_next"
                    android:src="@drawable/na"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Temperature"
                    android:id="@+id/temperatureTextView_next"
                    android:textStyle="bold"
                    android:typeface="serif"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Condition"
                    android:textColor="#000"
                    android:id="@+id/conditionTextView_next"
                    android:layout_below="@+id/textView_tomorrow"
                    android:layout_alignParentStart="true" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Location"
                    android:textColor="#000"

                    android:id="@+id/locationTextView_next"
                    android:textStyle="bold"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/conditionTextView_next" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Tomorrow"
                    android:textColor="#000"

                    android:id="@+id/textView_tomorrow"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    android:layout_toStartOf="@+id/weatherIconImageView_next"
                    android:typeface="serif" />

            </RelativeLayout>
        </android.support.v7.widget.CardView>
        </RelativeLayout>

    </ScrollView>
    </android.support.v4.widget.SwipeRefreshLayout>
