<RelativeLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@drawable/vignette"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="170dp"
        android:orientation="vertical"
        >

        <com.kyleduo.switchbutton.SwitchButton
            android:id="@+id/sb_use_listener"
            style="@style/SwitchButtonStyle"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:checked="false"
            android:layout_marginLeft="170dp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/listener_finish"
            style="@style/StyleTitleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:text="Notification"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:textColor="#fff"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/details"
            style="@style/StyleTitleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="16dp"
            android:text="Notify current weather condition, pollen count,
            and prediction every day"
            android:textColor="#fff"
            />

    </LinearLayout>

</RelativeLayout>
